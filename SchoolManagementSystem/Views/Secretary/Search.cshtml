@model SchoolManagementSystem.Models.SecretarySearchModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Secretary/SecretaryLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Search Results:</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@if (@Model.Students.Count == 0 && @Model.Teachers.Count == 0)
{
    <h4 class="text-danger">Sorry, but no students/teachers were found.</h4>
}

@if (@Model.Students.Count != 0)
{
    <h3>Students:</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>PIN</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Address</th>
                        <th>Class</th>
                        <th>Mobile</th>
                        <th>Phone</th>
                        <th>Nationality</th>
                        <th>Religion</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.Student.PIN</td>
                            <td>@student.Student.FirstName</td>
                            <td>@student.Student.LastName</td>
                            <td>@student.Student.Address</td>
                            <td>@student.ClassName</td>
                            <td>@student.Student.MobilePhoneNumber</td>
                            <td>@student.Student.PhoneNumber</td>
                            <td>@student.Student.Nationality</td>
                            <td>@student.Student.Religion</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 (nested) -->
    </div>
    <!-- /.row -->
}
@if(@Model.Teachers.Count != 0){
<h3>Teachers:</h3>
<div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>PIN</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Phone</th>
                                <th>Grade</th>
                                <th>Discipline</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model.Teachers)
                            {
                                <tr>
                                    <td>@teacher.Teacher.PIN</td>
                                    <td>@teacher.Teacher.FirstName</td>
                                    <td>@teacher.Teacher.LastName</td>
                                    <td>@teacher.Teacher.Address</td>
                                    <td>@teacher.Teacher.Email</td>
                                    <td>@teacher.Teacher.MobilePhoneNumber</td>
                                    <td>@teacher.Teacher.PhoneNumber</td>
                                    <td>@teacher.Teacher.EducationalGrade</td>
                                    <td>@teacher.Discipline</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
    <!-- /.row -->
    
}