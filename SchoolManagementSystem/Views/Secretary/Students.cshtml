@model List<SchoolManagementSystem.Models.StudentViewModel>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Secretary/SecretaryLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Students:</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>PIN</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>Address</th>
                                <th>Class</th>
                                <th>Mobile</th>
                                <th>Phone</th>
                                <th>Nationality</th>
                                <th>Religion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.Student.PIN</td>
                                    <td>@student.Student.FirstName</td>
                                    <td>@student.Student.LastName</td>
                                    <td>@student.Student.Address</td>
                                    <td>@student.ClassName</td>
                                    <td>@student.Student.MobilePhoneNumber</td>
                                    <td>@student.Student.PhoneNumber</td>
                                    <td>@student.Student.Nationality</td>
                                    <td>@student.Student.Religion</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
        <!-- /.row -->