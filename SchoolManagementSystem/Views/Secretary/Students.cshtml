@model List<SchoolManagementSystem.Domain.Entities.Student>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Secretary/SecretaryLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Students:</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>PIN</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>Address</th>
                                <th>Class</th>
                                <th>Mobile</th>
                                <th>Phone</th>
                                <th>Nationality</th>
                                <th>Religion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.PIN</td>
                                    <td>@student.FirstName</td>
                                    <td>@student.LastName</td>
                                    <td>@student.Address</td>
                                    <td>@student.Class_Id</td>
                                    <td>@student.MobilePhoneNumber</td>
                                    <td>@student.PhoneNumber</td>
                                    <td>@student.Nationality</td>
                                    <td>@student.Religion</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
        <!-- /.row -->