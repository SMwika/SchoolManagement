@model SchoolManagementSystem.Domain.Entities.Student
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Student/StudentLayout.cshtml";
}

<div class="col-lg-12">
    <h1 class="page-header">My Details</h1>
</div>
<div>
    <label>PIN:</label> @Model.PIN
</div>
<div>
    <label>First Name:</label> @Model.FirstName
</div>
<div>
    <label>Last Name:</label> @Model.LastName
</div>
<div>
    <label>Class:</label> @ViewBag.className
</div>
<div>
    <label>Address:</label> @Model.Address
</div>
<div>
    <label>Phone Number:</label> @Model.PhoneNumber
</div>
<div>
    <label>Mobile Phone:</label> @Model.MobilePhoneNumber
</div>
<div>
    <label>Nationality:</label> @Model.Nationality
</div>
<div>
    <label>Religion:</label> @Model.Religion
</div>