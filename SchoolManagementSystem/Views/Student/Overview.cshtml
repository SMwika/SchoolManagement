@model SchoolManagementSystem.Models.StudentMonthOverviewModel
@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Student/StudentLayout.cshtml";
}

<!-- Page Content -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">My Performance</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i>Current Month Marks
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>01</th>
                                <th>02</th>
                                <th>03</th>
                                <th>04</th>
                                <th>05</th>
                                <th>06</th>
                                <th>07</th>
                                <th>08</th>
                                <th>09</th>
                                <th>10</th>
                                <th>11</th>
                                <th>12</th>
                                <th>13</th>
                                <th>14</th>
                                <th>15</th>
                                <th>16</th>
                                <th>17</th>
                                <th>18</th>
                                <th>19</th>
                                <th>20</th>
                                <th>21</th>
                                <th>22</th>
                                <th>23</th>
                                <th>24</th>
                                <th>25</th>
                                <th>26</th>
                                <th>27</th>
                                <th>28</th>
                                <th>29</th>
                                <th>30</th>
                                <th>31</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subject in @Model.Subjects)
                            {
                                <tr>
                                    <td>@subject.Subject</td>

                                    @for (int i = 1; i <= 31; i++)
                                    {
                                        bool hasMark = false;
                                        foreach (var mark in @Model.StudentMarks)
                                        {
                                            if (mark.Date.Day == i && mark.Discipline_Id == subject.Id)
                                            {
                                                if (mark.Value == -1)
                                                {
                                                    <td><span class="text-danger">A</span></td>
                                                }
                                                else
                                                {
                                                    <td>@mark.Value</td>
                                                }
                                                hasMark = true;
                                                break;
                                            }
                                        }
                                        if (!hasMark)
                                        {
                                        <td>-</td>
                                        }
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>

