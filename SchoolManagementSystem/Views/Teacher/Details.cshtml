@model SchoolManagementSystem.Domain.Entities.Teacher

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Teacher/TeacherLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Details</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <label class="col-lg-1 text-right">PIN:</label>@Model.PIN
</div>
<div class="row">
    <label  class="col-lg-1 text-right">First Name:</label> @Model.FirstName
</div>
<div class="row">
    <label  class="col-lg-1 text-right">Last Name:</label> @Model.LastName
</div>
<div class="row">
    <label  class="col-lg-1 text-right">Descipline:</label> @ViewBag.desciplineName
</div>
<div class="row">
    <label  class="col-lg-1 text-right">Address:</label> @Model.Address
</div>
<div class="row">
    <label  class="col-lg-1 text-right">Phone Number:</label> @Model.PhoneNumber
</div>
<div class="row">
    <label  class="col-lg-1 text-right">Mobile Phone:</label> @Model.MobilePhoneNumber
</div>
<div class="row">
    <label  class="col-lg-1 text-right">Grade:</label> @Model.EducationalGrade
</div>

<hr/>
<div class="row" style="padding-left: 25px">
    <label >Classes I study:</label>
    <ul>
        @foreach (var item in @Model.ClassesToStudy)
        {
            <li>@item.Name</li>
        }
    </ul>
</div>