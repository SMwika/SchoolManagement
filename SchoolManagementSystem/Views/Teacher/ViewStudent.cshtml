@model SchoolManagementSystem.Models.StudentMonthOverviewModel
@{
    ViewBag.Title = "ViewStudent";
    Layout = "~/Views/Teacher/TeacherLayout.cshtml";

    var currMonth = "Month";

}

<!-- Page Content -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Search by PIN: @ViewBag.id</h1>
        <h3>@ViewBag.name</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-clock-o fa-fw"></i>Select period
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row col-lg-2 col-md-2 col-xs-6">
            @using (Html.BeginForm("ViewStudentMarks", "Teacher"))
            {
                <div class="form-group">
                    <label for="sel1">Select Year:</label>
                    <select name="year" class="form-control" id="sel1">
                        <option value="2016">2016</option>
                        <option value="2015">2015</option>
                        <option value="2014">2014</option>
                        <option value="2013">2013</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="sel1">Select Month:</label>
                    <select name="month" class="form-control" id="sel2">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">Octomber</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                
                <input type="text" name="id" value="@ViewBag.id" style="display: none"/>

                <button class="btn btn-primary" type="submit">Get Marks</button>
            }

        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>


<div class="panel panel-default">
    <!-- /.panel-heading -->
        <div class="panel-heading">
            <i class="fa fa-check-square fa-fw"></i>Student Actions
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <a class="btn btn-primary" href="@Url.Action("AddMark", "Teacher", new {studentId = @ViewBag.id})" style="min-width: 110px;" type="submit">Put Mark/Absence</a>
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>

